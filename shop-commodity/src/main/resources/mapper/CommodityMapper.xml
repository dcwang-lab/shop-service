<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.commodity.mapper.CommodityMapper">
    <resultMap id="commodityResult" type="com.shop.commodity.entity.Commodity">
        <id column="id" property="id"/>
        <id column="name" property="name"/>
        <id column="describe" property="describe"/>
        <id column="specs_id" property="specsId"/>
        <id column="type_id" property="typeId"/>
        <id column="price" property="price"/>
        <id column="stock" property="stock"/>
        <id column="file_path" property="filePath"/>
        <id column="create_by" property="createBy"/>
        <id column="create_time" property="createTime"/>
        <id column="update_by" property="updateBy"/>
        <id column="update_time" property="updateTime"/>
        <id column="del_flag" property="delFlag"/>
    </resultMap>

    <sql id="selectCommodityVO">
        select c.`id`,
               c.`name`,
               c.`describe`,
               c.`specs_id`,
               c.`type_id`,
               c.`price`,
               c.`stock`,
               c.`file_path`,
               c.`create_by`,
               c.`create_time`,
               c.`update_by`,
               c.`update_time`,
               c.`del_flag`
        from tb_commodity c
    </sql>

    <select id="listCommodities" resultMap="commodityResult">
        <include refid="selectCommodityVO"/>
        <where>
            <if test="name != null and name != ''">
                and c.`name` like concat('%', #{name}, '%')
            </if>
            <if test="typeId != null">
                and c.type_id = #{typeId}
            </if>
            <if test="(params != null and params != '') and (params.startTime != null and params.startTime != '') and
            (params.endTime != null and params.endTime != '')">
                and c.`create_time` between #{params.startTime} and #{params.endTime}
            </if>
            and c.`del_flag` = 0
        </where>
    </select>

    <select id="getCommodity" resultMap="commodityResult">
        <include refid="selectCommodityVO"/>
        where c.id = #{id}
    </select>

    <update id="update" parameterType="com.shop.commodity.entity.Commodity">
        update tb_commodity
        <set>
            <if test="stock != null">
                stock = #{stock},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>