<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.user.mapper.UserMapper">
    <resultMap id="userResult" type="com.shop.user.entity.User">
        <id column="id" property="id"/>
        <id column="name" property="name"/>
        <id column="sex" property="sex"/>
        <id column="phone" property="phone"/>
        <id column="photo" property="photo"/>
        <id column="balance" property="balance"/>
        <id column="create_time" property="createTime"/>
        <id column="update_by" property="updateBy"/>
        <id column="update_time" property="updateTime"/>
        <id column="del_flag" property="delFlag"/>
    </resultMap>

    <sql id="selectUserVO">
        select u.`id`,
               u.`name`,
               u.`sex`,
               u.`phone`,
               u.`photo`,
               u.`balance`,
               u.`create_time`,
               u.`update_by`,
               u.`update_time`,
               u.`del_flag`
        from tb_user u
    </sql>

    <select id="listUsers" resultMap="userResult">
        <include refid="selectUserVO"/>
        <where>
            <if test="name != null and name != ''">
                and u.`name` like concat('%', #{name}, '%')
            </if>
            and u.`del_flag` = 0
        </where>
    </select>

    <select id="getUser" resultMap="userResult">
        <include refid="selectUserVO"/>
        where u.id = #{id}
    </select>

    <insert id="insertUser" parameterType="com.shop.user.entity.User">
        insert into tb_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            `name`,
            `sex`,
            `phone`,
            `photo`,
            `balance`,
            `create_time`,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{name},
            #{sex},
            #{phone},
            #{photo},
            #{balance},
            now(),
        </trim>
    </insert>

    <update id="updateUser" parameterType="com.shop.user.entity.User">
        update tb_user
        <set>
            <if test="balance != null">
                balance = #{balance}
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>